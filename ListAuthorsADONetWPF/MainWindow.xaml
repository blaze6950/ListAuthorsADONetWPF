<Window x:Class="ListAuthorsADONetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListAuthorsADONetWPF"
        mc:Ignorable="d"
        Title="Authors" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Name="dockPanel" Grid.Column="0" Margin="10" LastChildFill="True">
            
        </DockPanel>
        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
            <Button Margin="5" Click="Button_Click" Name="addButton">Add</Button>
            <Button Margin="5" Click="Button_Click" Name="editButton" IsEnabled="False">Edit</Button>
            <Button Margin="5" Click="Button_Click" Name="deleteButton" IsEnabled="False">Delete</Button>
        </StackPanel>
    </Grid>
</Window>
